{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
  "exclude": ["node_modules", "coverage", "**/*.test.ts", "src/protohax/fixtures/**"]
}
